#!/bin/bash

exec 2> /home/orangepi/post-merge.log
exec 1>&2
set -x

cd /home/orangepi/pi_flex
mix deps.get
mix compile

echo "Stopping pi flex..."
sudo /usr/bin/systemctl stop pi_flex.service

rm -rf /home/orangepi/pi_flex/_build/dev/rel
mix release

echo "Starting pi flex..."
sudo /usr/bin/systemctl start pi_flex.service

# git update-index --chmod=+x post-merge